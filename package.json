{
  "name": "enquete",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "node index.js",
    "start": "NODE_ENV=production node index.js",
    "build": "npm run lint && npm run minify && npm run copy-assets",
    "lint": "eslint .",
   "minify": "mkdir -p frontend/js/minified && for f in frontend/js/*.js; do terser \"$f\" --compress --mangle --output \"frontend/js/minified/$(basename $f)\"; done",
    "copy-assets": "cp -r frontend/ dist/",
    "prestart": "npm run build"
  },
  "keywords": [],
  "author": "Daniel S.",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^9.9.1",
    "terser": "^5.31.6"
  }
}